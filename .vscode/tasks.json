// Name these taks the way you want
// Configure command in make to use desired amount of threads (now 4)
{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build all",
            "group": "build",
            "type": "shell",
            "command": "make",
            "args": ["FOC_KING"]
            //"args": ["FOC_KING", "USE_OPT="]
        },
        {
            "label": "Build clean",
            "group": "build",
            "type": "shell",
            "command": "make",
            "args": ["FOC_KING", "clean"]
        },
    ]
}
